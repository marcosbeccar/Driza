{
  "rules": {
    "users": {
      "$uid": {
        // Solo el usuario autenticado puede leer/escribir sus propios datos
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "posts": {
      // Solo usuarios autenticados pueden leer/escribir posts
      ".read": "auth != null",
      ".write": "auth != null"
    }
  }
}